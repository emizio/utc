{
  "presets": ["@babel/preset-typescript"],

  "env": {
    "esm": {
      "presets": [
        [
          "@babel/preset-env",
          { "targets": { "node": "current" }, "modules": false }
        ]
      ],

      "plugins": [
        [
          "babel-plugin-replace-import-extension",
          { "extMapping": { ".ts": ".js" } }
        ]
      ]
    }
  },

  "ignore": [
    "src/**/*.d.ts",
    "src/**/tests.ts",
    "src/tests/**/*",
    "src/**/tysts.ts",
    "src/tysts/**/*"
  ]
}
